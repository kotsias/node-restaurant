{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "verbose": true,
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "watch": ["src/"],
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "npx tsoa spec-and-routes && npx tsc && npm start",
    "ext": "js,json,ts"
}